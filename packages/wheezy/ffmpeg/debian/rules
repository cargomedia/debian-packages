#!/usr/bin/make -f

%:
	dh $@ --parallel --with autoreconf

override_dh_auto_configure:
	dh_auto_configure -- --enable-libspeex --enable-gpl --enable-nonfree \
	            --enable-shared --enable-version3 --enable-runtime-cpudetect \
	            --enable-libvpx --enable-libopus

install:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	dh_install

clean:
	dh clean

binary-arch:
	dh binary-arch

binary-indep:
	dh binary-indep

binary: build binary-arch binary-indep
