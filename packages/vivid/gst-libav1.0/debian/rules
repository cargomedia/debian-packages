#!/usr/bin/make -f

build:
	dh build --before configure
	./autogen.sh
	./configure --prefix=/usr
	$(MAKE)
	$(MAKE) DESTDIR=$(CURDIR)/debian/gstreamer1.0-libav install
	dh build --after build

clean:
	dh clean

binary-arch:
	dh binary-arch

binary-indep:
	dh binary-indep

binary: build binary-arch binary-indep
