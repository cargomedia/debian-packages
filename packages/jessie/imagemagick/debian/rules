	# for wand
	dh_install --package=libmagickwand-${IMVERSION}.${DEFAULTQUANTUMDEPTH}-dev \
		   --sourcedir=debian/tmp-${DEFAULTQUANTUMDEPTH} --autodest \
                   "usr/lib/$(DEB_HOST_MULTIARCH)/pkgconfig/MagickWand.pc"
